<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">


    <changeSet author="yusufkaya" id="1" >

        <createTable tableName="users">
            <column name="id" type="${uuid_type}"/>
            <column name="username" type="varchar(255)"/>
            <column name="name" type="varchar(255)"/>
            <column name="picture" type="varchar(255)"/>
            <column name="password" type="varchar(255)"/>
            <column name="provider" type="varchar(255)"/>
            <column name="provider_id" type="varchar(255)"/>
            <column name="credentials_non_expired" type="varchar(255)"/>
            <column name="account_non_locked" type="varchar(255)"/>
            <column name="account_non_expired" type="varchar(255)"/>
            <column name="enabled" type="boolean"/>
        </createTable>

        <createTable tableName="authorities">
            <column name="id" type="${uuid_type}"/>
            <column name="authority" type="varchar(255)"/>
        </createTable>

        <createTable tableName="users_authorities">
            <column name="id" type="${uuid_type}"/>
            <column name="users_id" type="${uuid_type}"/>
            <column name="authorities_id" type="${uuid_type}"/>
        </createTable>




    </changeSet>
</databaseChangeLog>